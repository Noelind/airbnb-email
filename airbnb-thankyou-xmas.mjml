  <mj-body>


    <!-- HEADER -->
    <mj-section padding="20px 0px">
      <mj-column>
        <mj-image src="https://noelind.github.io/airbnb-email/assets/ritasamenities_logo.png"></mj-image>
      </mj-column>
    </mj-section>

    <mj-section padding="0px 0px">
      <mj-column>
        <mj-text css-class="divider">.</mj-text>
      </mj-column>
    </mj-section>


