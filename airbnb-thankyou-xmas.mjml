        <mj-image src="https://noelind.github.io/airbnb-email/assets/signature.png"></mj-image>
      </mj-column>
    </mj-section>

    <mj-section padding="0px 0px">
      <mj-column>
        <mj-text css-class="divider">.</mj-text>
      </mj-column>
    </mj-section>

    <mj-section padding="20px 0px 0px 0px">
      <mj-column>
        <mj-image width="200px" src="https://noelind.github.io/airbnb-email/assets/logo.png"></mj-image>
      </mj-column>
    </mj-section>

    <mj-section padding="0px 0px">
      <mj-column>
        <mj-text align="center" font-size="14px" padding="40px 20px 20px 20px" text-transform="uppercase" letter-spacing="2px">Contact us</mj-text>
        <mj-text align="center" font-size="14px" padding="0px 20px 20px 20px">Email: <a href="mailto:ritas@gmail.com" style="color:black;">ritas@gmail.com</mj-text>
        <mj-text align="center" font-size="14px" padding="0px 20px 20px 20px">Telephone: <a href="tel:+00306958741234" style="color:black;">+00306958741234</mj-text>
        <mj-text align="center" font-size="14px" padding="0px 20px 20px 20px"><a href="www.facebook.com" style="color:black;">Facebook Page</mj-text>
      </mj-column>
    </mj-section>

  </mj-body>
</mjml>