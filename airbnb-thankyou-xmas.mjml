<mjml>
  <mj-head>
    <mj-font name="futura-pt" href="https://use.typekit.net/wdk0dfz.css" />
    <mj-breakpoint width="570px" />
    <mj-attributes>
      <mj-all padding="0" />
      <mj-body background-color="white" />
      <mj-text padding="0" />
      <mj-button border-radius="0" />
      <mj-class name="header" padding="10px 0" ; />
      <mj-class name="header-logo"></mj-class>
      <mj-class name="body" padding="0 20px" background-color="#036810" />
      <mj-class name="greeting" font-size="20px" font-weight="500" padding-bottom="15px" color="white" />
      <mj-class name="wish" font-size="16px" line-height="30px" color="white" />
      <mj-class name="closing-section" padding-top="50px" />
      <mj-class name="closing-text" align="center" font-size="18px" color="white" />
      <mj-class name="closing-team" align="center" font-size="18px" padding-top="10px" color="white" />
      <mj-all padding="0" font-family="'futura-pt', Arial" />
    </mj-attributes>
    <mj-style>
      .divider div {
